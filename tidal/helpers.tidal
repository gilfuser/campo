acidcof =
    p "acidcof" $
    (12.6 ~>) $ 
    acutoff (
        ( slow 64 $ range 0.06 0.93 sine )
        + ( slow 8 $ range "-0.06" 0.06 tri )
        ) # "acid"
acidres =
    p "acidres" $
    (64 ~>) $ 
    areson ( slow 76 $ ( 1 - tri) ) # "dummy"
acidenm =
    p "acidenm" $
    (32 ~>) $
    aenvmod (
        ( slow 0.5 ( range 0.5 0.75 tri) )
        + ( slow 132 $ range "-0.5" 0.25 sine )
    ) # "acid"
acidatt =
    p "acidatt" $
    (12.6 ~>) $ 
    aenvatt (
        ( slow 48 $ range 0.125 0.25 saw )
        + ( slow 4 $ range "-0.033" 0.033 tri )
        ) # "dummy"
aciddec =
    p "aciddec" $
    (12.6 ~>) $ 
    aenvdec (
        ( slow 96 $ range 0.086 0.97 saw )
        + ( slow 6 $ range "-0.03" 0.03 tri )
        ) # "dummy"
acidacd =
    p "acidacd" $
    (36 ~>) $ 
    aaccdec (
        ( slow 112 $ range 0.086 0.97 tri )
        + ( slow 4 $ range "-0.03" 0.03 tri )
        ) # "acid"
acideac =
    p "acideac" $
    (19.84 ~>) $ 
    aenvacc (
        ( slow 84 $ range 0 0.73 sine )
        * ( slow 12 $ tri )
        + 0.23
        ) # "acid"
acidmod =
    do
    acidcof
    acidres
    acidenm
    acidatt
    acidacd
    acideac
    aciddec
stopacidmod =
    do
    p "acidcof" silence
    p "acidres" silence
    p "acidenm" silence
    p "acidatt" silence
    p "acidacd" silence
    p "acideac" silence
    p "aciddec" silence
